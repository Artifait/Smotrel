<Window x:Class="Smotrel.DialogWindows.DeleteCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Smotrel.DialogWindows"
        mc:Ignorable="d"
        Title="Delete Course" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MinWidth="320">

    <Border Background="{StaticResource WindowBackgroundBrush}"
            BorderThickness="1"
            BorderBrush="{StaticResource BorderBrush}"
            CornerRadius="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="64"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    MouseLeftButtonDown="Header_Down"
                    Background="{StaticResource HeaderBackgroundBrush}"
                    CornerRadius="9,9,0,0">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Delete Course"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               FontFamily="Rockwell"
                               Foreground="{StaticResource GlyphBrush}"
                               FontSize="18"
                               FontWeight="SemiBold"/>

                    <Button Grid.Column="1"
                            Width="40"
                            Content="&#xE8BB;"
                            FontFamily="Segoe MDL2 Assets"
                            Foreground="{StaticResource WhiteBrush}"
                            Click="CloseButton_Click"
                            Style="{StaticResource ExitBtn}"/>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="18,14,18,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Вы действительно хотите удалить курс?"
                           Foreground="{StaticResource LightGrayBrush}"
                           FontSize="15"
                           Margin="0,0,0,10"/>

                <Border Grid.Row="1"
                        Background="{StaticResource StatsPanelBackgroundBrush}"
                        CornerRadius="6"
                        Padding="10">

                    <TextBlock Text="{Binding CourseTitle}"
                               x:Name="CourseNameText"
                               Foreground="{StaticResource WhiteBrush}"
                               FontSize="14"
                               FontWeight="SemiBold"/>
                </Border>
            </Grid>

            <Grid Grid.Row="2" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Отмена"
                        Margin="0,0,6,0"
                        IsCancel="True"
                        Style="{StaticResource DarkButtonStyle}"
                        Click="CloseButton_Click"/>

                <Button Grid.Column="1"
                        Content="Удалить"
                        Margin="6,0,0,0"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="DeleteButton_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>