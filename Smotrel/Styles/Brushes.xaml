<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Styles/Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource ColorWindowBackground}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource ColorBorder}"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource ColorHeaderBackground}"/>
    <SolidColorBrush x:Key="GlyphBrush" Color="{StaticResource ColorGlyphGray}"/>
    <SolidColorBrush x:Key="HoverOverlayBrush" Color="{StaticResource ColorHoverOverlay}"/>
    <SolidColorBrush x:Key="ExitHoverBrush" Color="{StaticResource ColorExitHover}"/>
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="{StaticResource ColorTextBoxBackground}"/>
    <SolidColorBrush x:Key="TextBoxForegroundBrush" Color="{StaticResource ColorTextBoxForeground}"/>
    <SolidColorBrush x:Key="StatsPanelBackgroundBrush" Color="{StaticResource ColorStatsPanelBackground}"/>
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource ColorLightGray}"/>
    <SolidColorBrush x:Key="MediumGrayBrush" Color="{StaticResource ColorMediumGray}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource ColorWhite}"/>
    <SolidColorBrush x:Key="DisabledBtnBgBrush" Color="{StaticResource ColorDisabledBtnBg}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource ColorPrimary}"/>
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="{StaticResource ColorPrimaryForeground}"/>
    <SolidColorBrush x:Key="ButtonDarkBrush" Color="{StaticResource ColorButtonDark}"/>
    <SolidColorBrush x:Key="EmptyMessageBrush" Color="{StaticResource ColorEmptyMessage}"/>

</ResourceDictionary>
