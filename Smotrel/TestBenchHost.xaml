<Window x:Class="Smotrel.TestBenchHost"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smotrel Test Benches"
        Width="400" Height="500"
        Background="#1E1E1E"
        Foreground="White"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="🧪 Test Benches"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   Foreground="#FFCC00"/>

        <ListBox x:Name="BenchList"
                 Grid.Row="1"
                 Background="#2D2D2D"
                 BorderBrush="#444"
                 BorderThickness="1"
                 Padding="5"
                 SelectionChanged="BenchList_SelectionChanged"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"
                               FontSize="16"
                               Padding="5,3"
                               Foreground="White"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
