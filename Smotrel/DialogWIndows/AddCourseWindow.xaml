<Window x:Class="Smotrel.DialogWindows.AddCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add Course" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MinWidth="480">

    <Border Background="{StaticResource WindowBackgroundBrush}" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="64"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" MouseLeftButtonDown="Header_Down" Background="{StaticResource HeaderBackgroundBrush}" CornerRadius="9,9,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Add Course"
                               VerticalAlignment="Center" Margin="10,0,0,0" FontFamily="Rockwell"
                               Foreground="{StaticResource GlyphBrush}" FontSize="18" FontWeight="SemiBold"/>

                    <Button Grid.Column="2" IsCancel="True" Width="40" Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource WhiteBrush}" Click="CloseButton_Click" Style="{StaticResource ExitBtn}"/>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Укажите путь до желаемого курса" Foreground="{StaticResource LightGrayBrush}" FontSize="14" Margin="6,6,6,10"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="PathTextBox" Text="{Binding SelectedFolderPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" VerticalAlignment="Center" Height="34" Margin="0,0,8,0" Style="{StaticResource DefaultTextBoxStyle}" />

                        <Button Grid.Column="1" Content="Обзор..." Click="BrowseButton_Click" Height="34" VerticalAlignment="Center" Style="{StaticResource CapBtn}" Background="{StaticResource ButtonDarkBrush}" Foreground="{StaticResource TextBoxForegroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"/>
                    </Grid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Название курса:" VerticalAlignment="Center" Foreground="{StaticResource LightGrayBrush}"/>
                        <TextBox Margin="6,0,0,0" Text="{Binding CourseTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center" Width="360" Height="38" Style="{StaticResource DefaultTextBoxStyle}" IsEnabled="{Binding IsStatsVisible}"/>
                    </StackPanel>

                    <Grid Grid.Row="3"/>
                </Grid>

                <Border Grid.Column="1" Background="{StaticResource StatsPanelBackgroundBrush}" CornerRadius="6" Padding="14" Margin="16,0,0,0" Visibility="{Binding IsStatsVisible, Converter={StaticResource BoolToVis}}" MinWidth="200">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Статистика курса" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource WhiteBrush}" Margin="0,0,0,12"/>

                        <Grid Grid.Row="1" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                <TextBlock Text="Видео:" Foreground="{StaticResource MediumGrayBrush}"/>
                                <TextBlock Text="Глав (включая подглав):" Foreground="{StaticResource MediumGrayBrush}"/>
                                <TextBlock Text="Глубина (max):" Foreground="{StaticResource MediumGrayBrush}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding CourseStats.TotalVideos}" FontWeight="Bold" Foreground="{StaticResource WhiteBrush}" HorizontalAlignment="Right"/>
                                <TextBlock Text="{Binding CourseStats.TotalChapters}" FontWeight="Bold" Foreground="{StaticResource WhiteBrush}" HorizontalAlignment="Right"/>
                                <TextBlock Text="{Binding CourseStats.MaxDepth}" FontWeight="Bold" Foreground="{StaticResource WhiteBrush}" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="2" Background="Transparent" Padding="10" CornerRadius="0,0,10,10">
                <Button x:Name="AddButton" Content="Путь не задан" Height="44" 
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                        Click="AddButton_Click" IsEnabled="{Binding IsAddEnabled}" 
                        FontSize="16" FontWeight="SemiBold" BorderThickness="0" 
                        Style="{StaticResource PrimaryButtonStyle}"/>
            </Border>
        </Grid>
    </Border>
</Window>
