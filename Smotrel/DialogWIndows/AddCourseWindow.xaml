<!--
    AddCourseWindow.xaml
    ИЗМЕНЕНИЯ:
    • Кнопка Browse: во время сканирования превращается в "Отменить"
    • ProgressBar + процент + имя файла под кнопкой Browse
    • Блок статистики появляется после завершения сканирования
    • IsEnabled кнопки "Добавить" блокирован во время сканирования
-->
<Window x:Class="Smotrel.DialogWindows.AddCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cnvrt="clr-namespace:Smotrel.Converters"
        Title="Добавить курс"
        Width="520" SizeToContent="Height"
        MinHeight="200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <cnvrt:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Border Background="{StaticResource WindowBackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <!-- Заголовок -->
                <RowDefinition Height="40"/>
                <!-- Контент -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ── Заголовок окна ─────────────────────────────────────────── -->
            <Border Grid.Row="0"
                    Background="{StaticResource HeaderBackgroundBrush}"
                    CornerRadius="9,9,0,0"
                    MouseLeftButtonDown="Header_Down">
                <Grid>
                    <TextBlock Text="Добавить курс"
                               Foreground="{StaticResource GlyphBrush}"
                               FontFamily="Rockwell" FontSize="18"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    <Button HorizontalAlignment="Right"
                            Width="40" Content="&#xE8BB;"
                            FontFamily="Segoe MDL2 Assets"
                            Foreground="{StaticResource WhiteBrush}"
                            Click="CloseButton_Click"
                            Style="{StaticResource ExitBtn}"/>
                </Grid>
            </Border>

            <!-- ── Контент ────────────────────────────────────────────────── -->
            <StackPanel Grid.Row="1" Margin="24,20,24,24" DataContext="{Binding}">

                <!-- Путь к папке -->
                <TextBlock Text="Папка с курсом:"
                           Foreground="{StaticResource GlyphBrush}"
                           FontFamily="Arial" FontSize="13"
                           Margin="0,0,0,6"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding SelectedFolderPath, Mode=TwoWay}"
                             IsReadOnly="True"
                             Background="{StaticResource ButtonDarkBrush}"
                             Foreground="{StaticResource WhiteBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             BorderThickness="1"
                             Padding="8,6" FontFamily="Arial" FontSize="12"
                             VerticalContentAlignment="Center"/>

                    <!--
                        Кнопка Browse / Отменить.
                        IsScanning=True → текст "Отменить"
                    -->
                    <Button Grid.Column="2"
                            Width="110"
                            Click="BrowseButton_Click" FontSize="12"
                            Style="{StaticResource DarkButtonStyle}"
                            Foreground="{StaticResource GlyphBrush}">
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Выбрать папку"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsScanning}" Value="True">
                                            <Setter Property="Text" Value="Отменить"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Button>
                </Grid>

                <!-- ── Прогресс сканирования ──────────────────────────────── -->
                <!--
                    Виден только во время сканирования (IsScanning=True).
                    Скрыт после завершения.
                -->
                <StackPanel Margin="0,14,0,0"
                            Visibility="{Binding IsScanning,
                                Converter={StaticResource BoolToVisibilityConverter}}">

                    <!-- Прогресс-бар -->
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ProgressBar Grid.Column="0"
                                     Height="8"
                                     Value="{Binding ScanProgress}"
                                     Minimum="0" Maximum="100"
                                     Foreground="#FF0033"
                                     Background="{StaticResource ButtonDarkBrush}"
                                     BorderThickness="0"/>

                        <TextBlock Grid.Column="2"
                                   Text="{Binding ScanProgressText}"
                                   Foreground="{StaticResource LightGrayBrush}"
                                   FontFamily="Arial" FontSize="11"
                                   VerticalAlignment="Center"
                                   MinWidth="80"/>
                    </Grid>

                    <!-- Текущий файл -->
                    <TextBlock Text="{Binding ScanCurrentFile}"
                               Foreground="{StaticResource TextBoxForegroundBrush}"
                               FontFamily="Arial" FontSize="11" FontWeight="Bold"
                               TextTrimming="CharacterEllipsis"
                               ToolTip="{Binding ScanCurrentFile}"/>
                </StackPanel>

                <!-- ── Статистика ─────────────────────────────────────────── -->
                <StackPanel Margin="0,16,0,0"
                            Visibility="{Binding IsStatsVisible,
                                Converter={StaticResource BoolToVisibilityConverter}}">

                    <!-- Редактируемое название -->
                    <TextBlock Text="Название курса:"
                               Foreground="{StaticResource GlyphBrush}"
                               FontFamily="Arial" FontSize="13"
                               Margin="0,0,0,6"/>
                    <TextBox Text="{Binding CourseTitle, UpdateSourceTrigger=PropertyChanged}"
                             Background="{StaticResource ButtonDarkBrush}"
                             Foreground="{StaticResource WhiteBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             BorderThickness="1"
                             Padding="8,6" FontFamily="Arial" FontSize="13"
                             Margin="0,0,0,14"/>

                    <!-- Общая статистика -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding CourseStats.TotalVideos}"
                                       Foreground="White" FontSize="26" FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="видео" Foreground="{StaticResource PrimaryForegroundBrush}"
                                       FontSize="11" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding CourseStats.TotalChapters}"
                                       Foreground="White" FontSize="26" FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="глав" Foreground="{StaticResource PrimaryForegroundBrush}"
                                       FontSize="11" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding CourseStats.MaxDepth}"
                                       Foreground="White" FontSize="26" FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="уровней" Foreground="{StaticResource PrimaryForegroundBrush}"
                                       FontSize="11" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- ── Кнопка добавить ────────────────────────────────────── -->
                <Button x:Name="AddButton"
                        Content="Добавить курс"
                        IsEnabled="{Binding IsAddEnabled}"
                        Margin="0,20,0,0"
                        Height="38"
                        Click="AddButton_Click"
                        Style="{StaticResource DarkButtonStyle}"
                        Foreground="{StaticResource GlyphBrush}"
                        FontSize="14"/>

            </StackPanel>
        </Grid>
    </Border>
</Window>
