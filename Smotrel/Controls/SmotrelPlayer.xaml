<UserControl x:Class="Smotrel.Controls.SmotrelPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:self="clr-namespace:Smotrel.Controls"
             Background="Black"
             Focusable="True">

    <UserControl.Resources>

        <!-- Кнопка-иконка плеера -->
        <Style x:Key="PlayerIconBtn" TargetType="Button">
            <Setter Property="Background"       Value="Transparent"/>
            <Setter Property="BorderThickness"  Value="0"/>
            <Setter Property="Cursor"           Value="Hand"/>
            <Setter Property="Focusable"        Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#55FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Пункт меню скорости (тёмный) -->
        <Style x:Key="SpeedMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground"            Value="#CCCCCC"/>
            <Setter Property="Background"            Value="Transparent"/>
            <Setter Property="FontFamily"            Value="Arial"/>
            <Setter Property="FontSize"              Value="13"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                Padding="12,7,20,7" MinWidth="110">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="18"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Check" Grid.Column="0"
                                           Text="&#xE73E;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="10" Foreground="#FF0033"
                                           VerticalAlignment="Center" Visibility="Collapsed"/>
                                <ContentPresenter Grid.Column="1" ContentSource="Header"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2D2D2D"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Check" Property="Visibility" Value="Visible"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid x:Name="RootGrid" ClipToBounds="True">

        <!-- ── СЛОЙ 1: Видео ──────────────────────────────────────────────── -->
        <MediaElement x:Name="Media"
                      LoadedBehavior="Manual" UnloadedBehavior="Stop"
                      Stretch="Uniform" ScrubbingEnabled="True"
                      MediaOpened="Media_MediaOpened"
                      MediaEnded="Media_MediaEnded"
                      MediaFailed="Media_MediaFailed"/>

        <!-- ── СЛОЙ 2: Оверлей управления ────────────────────────────────── -->
        <Grid x:Name="ControlsOverlay" IsHitTestVisible="False">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#BB000000" Offset="0"/>
                    <GradientStop Color="#00000000" Offset="0.22"/>
                    <GradientStop Color="#00000000" Offset="0.70"/>
                    <GradientStop Color="#DD000000" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" Padding="16,10,16,8" IsHitTestVisible="True">
                <TextBlock x:Name="TbTitle" Text="" Foreground="White"
                           FontFamily="Arial" FontSize="14" FontWeight="SemiBold"
                           TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="6"
                                          ShadowDepth="1" Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Border>

            <!-- Нижняя панель -->
            <Grid Grid.Row="2" IsHitTestVisible="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="44"/>
                </Grid.RowDefinitions>

                <!-- Таймлайн -->
                <Grid Grid.Row="0" VerticalAlignment="Center" Margin="14,0,14,0">
                    <self:ClickableProgressBar x:Name="Timeline"
                        ProgressBrush="#FF0033"
                        BufferBrush="#55FFFFFF"
                        TrackBrush="#33FFFFFF"
                        ValueChanged="Timeline_ValueChanged"/>
                </Grid>

                <!-- Строка управления -->
                <Grid Grid.Row="1" Margin="6,0,6,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Пред / Play-Pause / След -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="BtnPrev" Width="36" Height="36" Padding="6"
                                ToolTip="Предыдущий урок"
                                Style="{StaticResource PlayerIconBtn}" Click="BtnPrev_Click">
                            <TextBlock Text="&#xE892;" FontFamily="Segoe MDL2 Assets"
                                       FontSize="16" Foreground="White"/>
                        </Button>
                        <Button x:Name="BtnPlayPause" Width="42" Height="42" Padding="6"
                                ToolTip="Воспроизведение / Пауза"
                                Style="{StaticResource PlayerIconBtn}" Click="BtnPlayPause_Click">
                            <TextBlock x:Name="GlyphPlayPause" Text="&#xE768;"
                                       FontFamily="Segoe MDL2 Assets" FontSize="22" Foreground="White"/>
                        </Button>
                        <Button x:Name="BtnNext" Width="36" Height="36" Padding="6"
                                ToolTip="Следующий урок"
                                Style="{StaticResource PlayerIconBtn}" Click="BtnNext_Click">
                            <TextBlock Text="&#xE893;" FontFamily="Segoe MDL2 Assets"
                                       FontSize="16" Foreground="White"/>
                        </Button>
                    </StackPanel>

                    <!-- Громкость -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal"
                                VerticalAlignment="Center" Margin="2,0,0,0">
                        <Button x:Name="BtnMute" Width="32" Height="36" Padding="4"
                                ToolTip="Mute" Style="{StaticResource PlayerIconBtn}"
                                Click="BtnMute_Click">
                            <TextBlock x:Name="GlyphVolume" Text="&#xE995;"
                                       FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="White"/>
                        </Button>
                        <self:ClickableVolumeBar x:Name="VolumeBar" Width="72"
                            VerticalAlignment="Center"
                            ProgressBrush="White" TrackBrush="#44FFFFFF"
                            ValueChanged="VolumeBar_ValueChanged"/>
                    </StackPanel>

                    <!-- Время + глава -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal"
                                VerticalAlignment="Center" Margin="10,0,0,0">
                        <TextBlock x:Name="TbTime" Text="0:00 / 0:00"
                                   Foreground="White" FontSize="12" FontFamily="Arial"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text=" · " Foreground="#77FFFFFF"
                                   FontSize="12" VerticalAlignment="Center"/>
                        <TextBlock x:Name="TbChapter" Text="" Opacity="0"
                                   Foreground="#BBFFFFFF" FontSize="12" FontFamily="Arial"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Правые кнопки -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">

                        <!-- Скорость -->
                        <Button x:Name="BtnSpeed" Width="44" Height="36" Padding="4"
                                ToolTip="Скорость" Style="{StaticResource PlayerIconBtn}"
                                Click="BtnSpeed_Click">
                            <TextBlock x:Name="TbSpeed" Text="1×" Foreground="White"
                                       FontSize="13" FontFamily="Arial" VerticalAlignment="Center"/>
                            <Button.ContextMenu>
                                <ContextMenu x:Name="SpeedMenu" Placement="Top" HasDropShadow="True">
                                    <ContextMenu.Template>
                                        <ControlTemplate TargetType="ContextMenu">
                                            <Border Background="#1E1E1E" BorderBrush="#3A3A3A"
                                                    BorderThickness="1" CornerRadius="4"
                                                    Padding="0,4,0,4" SnapsToDevicePixels="True">
                                                <ItemsPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </ContextMenu.Template>
                                    <ContextMenu.Resources>
                                        <Style TargetType="MenuItem"
                                               BasedOn="{StaticResource SpeedMenuItemStyle}"/>
                                    </ContextMenu.Resources>
                                    <MenuItem Header="0.25×" Tag="0.25" Click="SpeedItem_Click"/>
                                    <MenuItem Header="0.5×"  Tag="0.5"  Click="SpeedItem_Click"/>
                                    <MenuItem Header="0.75×" Tag="0.75" Click="SpeedItem_Click"/>
                                    <MenuItem Header="1×"    Tag="1.0"  Click="SpeedItem_Click" IsChecked="True"/>
                                    <MenuItem Header="1.25×" Tag="1.25" Click="SpeedItem_Click"/>
                                    <MenuItem Header="1.5×"  Tag="1.5"  Click="SpeedItem_Click"/>
                                    <MenuItem Header="2×"    Tag="2.0"  Click="SpeedItem_Click"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>

                        <!--
                            BtnExitMode — универсальная кнопка "выйти из текущего режима".
                            Видна только в Fullscreen/PiP. Иконка меняется из code-behind:
                              Fullscreen → E73F
                              PiP        → E9A6
                        -->
                        <Button x:Name="BtnExitMode" Width="36" Height="36" Padding="6"
                                Visibility="Collapsed"
                                Style="{StaticResource PlayerIconBtn}" Click="BtnExitMode_Click">
                            <TextBlock x:Name="GlyphExitMode" Text="&#xE73F;"
                                       FontFamily="Segoe MDL2 Assets" FontSize="16"
                                       Foreground="White"/>
                        </Button>

                        <!-- Полный экран (виден только в Normal режиме) -->
                        <Button x:Name="BtnFullscreen" Width="36" Height="36" Padding="6"
                                ToolTip="Полный экран"
                                Style="{StaticResource PlayerIconBtn}" Click="BtnFullscreen_Click">
                            <TextBlock Text="&#xE740;" FontFamily="Segoe MDL2 Assets"
                                       FontSize="16" Foreground="White"/>
                        </Button>

                        <!-- PiP (виден только в Normal режиме) -->
                        <Button x:Name="BtnPip" Width="36" Height="36" Padding="6"
                                ToolTip="Картинка в картинке"
                                Style="{StaticResource PlayerIconBtn}" Click="BtnPip_Click">
                            <TextBlock Text="&#xEF15;" FontFamily="Segoe MDL2 Assets"
                                       FontSize="16" Foreground="White"/>
                        </Button>

                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <!-- ── СЛОЙ 3: Оверлей блокировки ─────────────────────────────────── -->
        <Grid x:Name="LockOverlay" Visibility="Collapsed"
              IsHitTestVisible="True"
              PreviewMouseDown="LockOverlay_PreviewMouseDown"
              PreviewKeyDown="LockOverlay_PreviewKeyDown">
            <Grid.Background>
                <SolidColorBrush Color="#CC000000"/>
            </Grid.Background>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="&#xE72E;" FontFamily="Segoe MDL2 Assets"
                           FontSize="48" Foreground="#AAAAAA"
                           HorizontalAlignment="Center" Margin="0,0,0,12"/>
                <TextBlock x:Name="TbLockMessage" Text="Контент недоступен"
                           Foreground="White" FontSize="22" FontFamily="Arial"
                           FontWeight="SemiBold" HorizontalAlignment="Center"
                           TextAlignment="Center" TextWrapping="Wrap"
                           MaxWidth="400"/>
            </StackPanel>
        </Grid>

        <!-- ── СЛОЙ 4: Анимация Play/Pause (центральный глиф) ────────────── -->
        <!--
            Увеличен до 110px круг / 48px иконка.
            IsHitTestVisible=False — клики проходят насквозь.
        -->
        <Grid x:Name="PlayStateGlyphHost"
              IsHitTestVisible="False" Visibility="Collapsed"
              HorizontalAlignment="Center" VerticalAlignment="Center">

            <Ellipse x:Name="PlayStateCircle"
                     Width="110" Height="110"
                     Fill="#77000000"
                     RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <ScaleTransform x:Name="PlayStateScale" ScaleX="0.6" ScaleY="0.6"/>
                </Ellipse.RenderTransform>
            </Ellipse>

            <TextBlock x:Name="PlayStateGlyph"
                       FontFamily="Segoe MDL2 Assets" FontSize="48"
                       Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <ScaleTransform x:Name="PlayStateGlyphScale" ScaleX="0.6" ScaleY="0.6"/>
                </TextBlock.RenderTransform>
            </TextBlock>

        </Grid>

    </Grid>
</UserControl>
