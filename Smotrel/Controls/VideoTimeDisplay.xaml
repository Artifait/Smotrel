<UserControl x:Class="Smotrel.Controls.VideoTimeDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="root"
             Width="140" Height="28">
    <Border CornerRadius="4" Background="#FF2D2D30" Padding="5">
        <TextBlock x:Name="TimeText"
                   Foreground="#FFF0F0F0"
                   FontWeight="SemiBold"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
    </Border>
</UserControl>
