<UserControl x:Class="Smotrel.Controls.VolumeSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="24" Width="100" Background="Transparent">
    <Grid x:Name="Root" Background="Transparent"
          MouseLeftButtonDown="Root_MouseLeftButtonDown"
          MouseMove="Root_MouseMove"
          MouseLeftButtonUp="Root_MouseLeftButtonUp">
        <Border x:Name="Track" Background="#333" CornerRadius="2" Height="4" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
        <Border x:Name="Fill" Background="#FFCC00" CornerRadius="2" Height="4" VerticalAlignment="Center" HorizontalAlignment="Left" Width="0"/>
        <Canvas x:Name="ThumbCanvas" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsHitTestVisible="False">
            <Ellipse x:Name="Thumb" Width="10" Height="10" Fill="#FFCC00"/>
        </Canvas>
    </Grid>
</UserControl>
