<UserControl x:Class="Smotrel.Controls.PlaybackSpeedSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Smotrel.Converters"
             x:Name="root"
             Width="70" Height="30">

    <UserControl.Resources>
        <local:SpeedHighlightConverter x:Key="SpeedHighlightConverter"/>
    </UserControl.Resources>

    <Grid>
        <!-- Основная кнопка с текущей скоростью -->
        <ToggleButton x:Name="MainButton" 
                      Content="{Binding PlaybackSpeed, ElementName=root, StringFormat={}{0:0.##}x}"
                      Background="#FF2D2D30"
                      Foreground="#FFF0F0F0"
                      BorderBrush="#FF555555"
                      BorderThickness="1"
                      FontWeight="Bold"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Padding="5"/>

        <!-- Выпадающее меню -->
        <Popup x:Name="PopupMenu" 
               PlacementTarget="{Binding ElementName=MainButton}" 
               Placement="Bottom" 
               IsOpen="{Binding IsChecked, ElementName=MainButton}"
               StaysOpen="False"
               AllowsTransparency="True">
            <Border Background="#FF2D2D30" CornerRadius="4" BorderBrush="#FF555555" BorderThickness="1">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding AvailableSpeeds, ElementName=root}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding StringFormat={}{0:0.##}x}"
                                        Tag="{Binding}"
                                        Click="SpeedButton_Click"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        HorizontalContentAlignment="Center"
                                        Padding="5"
                                        Margin="1">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Style.Triggers>
                                                <!-- Подсветка выбранной скорости через MultiBinding -->
                                                <DataTrigger Value="True">
                                                    <DataTrigger.Binding>
                                                        <MultiBinding Converter="{StaticResource SpeedHighlightConverter}">
                                                            <!-- Текущая скорость -->
                                                            <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="PlaybackSpeed"/>
                                                            <!-- Скорость этой кнопки -->
                                                            <Binding Path="Tag" RelativeSource="{RelativeSource Self}"/>
                                                        </MultiBinding>
                                                    </DataTrigger.Binding>
                                                    <Setter Property="Foreground" Value="#FFD700"/>
                                                </DataTrigger>

                                                <!-- Ховер эффект -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF444444"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
