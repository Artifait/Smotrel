<UserControl x:Class="Smotrel.Controls.VideoProgressSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="28" MinWidth="100" Background="Transparent">
    <Grid x:Name="RootGrid"
          Background="Transparent"
          MouseLeftButtonDown="RootGrid_MouseLeftButtonDown"
          MouseMove="RootGrid_MouseMove"
          MouseLeftButtonUp="RootGrid_MouseLeftButtonUp">
        <Border x:Name="BackgroundTrack"
                Height="4"
                CornerRadius="2"
                Background="#333"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"/>

        <Grid Height="4" VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <Border x:Name="BufferTrack" Background="#555" CornerRadius="2" HorizontalAlignment="Left" Width="0"/>
            <Border x:Name="ProgressTrack" Background="#FFCC00" CornerRadius="2" HorizontalAlignment="Left" Width="0"/>
        </Grid>

        <Canvas x:Name="ThumbCanvas" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsHitTestVisible="False">
            <Ellipse x:Name="Thumb" Width="12" Height="12" Fill="#FFCC00" Stroke="#222" StrokeThickness="1"/>
        </Canvas>
    </Grid>
</UserControl>
