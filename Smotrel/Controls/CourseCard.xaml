<UserControl x:Class="Smotrel.Controls.CourseCard" 
                 x:Name="Root"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                 xmlns:local="clr-namespace:Smotrel.Controls" mc:Ignorable="d" 
                 MouseEnter="HighlightCard" MouseLeave="UnHighlightCard" 
                 d:DesignHeight="80" d:DesignWidth="790">
    <Grid>
        <local:DashedBorder x:Name="ItemBorder" Padding="10" StrokeDashArray="5 2"
                            Background="#242424" CornerRadius="4" AnimationDuration="0:0:40"
                            UseDashedBorder="False" DashedBorderBrush="White"
                            BorderThickness="3" BorderBrush="#242424">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" x:Name="labelDisplay"
                           TextWrapping="WrapWithOverflow"
                            Foreground="WhiteSmoke" FontSize="26"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,10,0"
                            VerticalAlignment="Center">
                    <Button x:Name="PlayBtn" Width="40" Height="40" FontSize="24" 
                        Content="&#xE768;" FontFamily="Segoe MDL2 Assets"
                        Foreground="{StaticResource GlyphBrush}"
                        Click="PlayCourse_Click" Style="{StaticResource CourseCardButtonStyle}"/>

                    <Button x:Name="RemoveBtn" Width="40" Height="40" Content="&#xE74D;" 
                            FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="10,0,0,0"
                            Foreground="{StaticResource GlyphBrush}" 
                            Click="RemoveCourse_Click" Style="{StaticResource CourseCardButtonStyle}"/>
                </StackPanel>
            </Grid>
        </local:DashedBorder>
    </Grid>
</UserControl>