<Window x:Class="Smotrel.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smotrel" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        MouseMove="Window_MouseMove"
        MouseLeave="Window_MouseLeave"
        Background="#FF0F0F13">
    <Window.Resources>
        <!-- Цветовая палитра темной темы -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FF0F0F13"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FF1E1E26"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF6C5CE7"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#FFA29BFE"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FF3D3D45"/>

        <!-- Стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF2D2D37"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для слайдера -->
        <Style TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="IsSnapToTickEnabled" Value="True"/>
            <Setter Property="TickPlacement" Value="None"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Фоновая дорожка -->
                            <Border x:Name="TrackBackground"
                                    Height="4"
                                    CornerRadius="2"
                                    Background="#FF3D3D45"
                                    Margin="5,10,5,10"
                                    Grid.Row="0"/>

                            <!-- Заполненная часть -->
                            <Border x:Name="ProgressTrack"
                                    Height="4"
                                    CornerRadius="2"
                                    Background="{StaticResource PrimaryBrush}"
                                    Margin="5,10,5,10"
                                    HorizontalAlignment="Left"
                                    Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value, Converter={StaticResource SliderConverter}}"
                                    Grid.Row="0"/>

                            <!-- Бегунок -->
                            <Thumb x:Name="Thumb"
                                    Grid.Row="0"
                                    Height="12"
                                    Width="12"
                                    Focusable="False"
                                    Style="{StaticResource SliderThumbStyle}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для бегунка слайдера -->
        <Style x:Key="SliderThumbStyle" TargetType="Thumb">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="#FF3D3D45"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Ellipse Fill="{TemplateBinding Background}" 
                                 Stroke="{TemplateBinding BorderBrush}"
                                 StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Конвертер для позиционирования слайдера -->
        <local:SliderValueConverter x:Key="SliderConverter"/>

        <!-- Стиль для ListBox -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="border" 
                                            Background="Transparent"
                                            CornerRadius="4">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#FF2D2D37"/>
                                            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#FF252530"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Основной контент -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Видео контейнер с эффектом тени -->
            <Border Grid.Row="0" Margin="10" CornerRadius="6" Background="#FF1A1A1A">
                <MediaElement x:Name="mediaElement"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Stop"
                          Stretch="Uniform"
                          MediaEnded="MediaElement_MediaEnded" />
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="1"/>
                </Border.Effect>
            </Border>

            <TextBlock x:Name="remainingTimeText"
           Foreground="{StaticResource TextBrush}"
           Margin="10,0,10,5"
           FontSize="12"
           HorizontalAlignment="Center"
           Text="Осталось: 0:00:00"
           Opacity="0.8"/>

            <Slider x:Name="videoSlider"
                    Grid.Row="1"
                    Margin="15,5,15,5"
                    Minimum="0"
                    Maximum="100"
                    ValueChanged="videoSlider_ValueChanged"
                    PreviewMouseDown="Slider_PreviewMouseDown"
                    PreviewMouseUp="Slider_PreviewMouseUp" />

            <!-- Контролы с иконками -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button ToolTip="Предыдущее видео" Click="BtnPrev_Click">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE100;" FontSize="14"/>
                </Button>
                <Button ToolTip="Пауза/Продолжить" Click="BtnPausePlay_Click">
                    <TextBlock x:Name="playPauseIcon" FontFamily="Segoe MDL2 Assets" Text="&#xE103;" FontSize="14"/>
                </Button>
                <Button ToolTip="Ускорить" Click="BtnSpeedUp_Click">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE102;" FontSize="14"/>
                </Button>
                <Button ToolTip="Нормальная скорость" Click="BtnNormalSpeed_Click">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE128;" FontSize="14"/>
                </Button>
                <Button ToolTip="Полный экран" Click="BtnFullscreen_Click">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE740;" FontSize="14"/>
                </Button>
                <Button ToolTip="Выбрать папку" Click="BtnChooseFolder_Click">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE838;" FontSize="14"/>
                </Button>
                <Button ToolTip="Следующее видео" Click="BtnNext_Click">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE101;" FontSize="14"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Панель списка -->
        <Border x:Name="listPanel"
                Grid.Column="1"
                Background="{StaticResource SurfaceBrush}"
                Width="0"
                HorizontalAlignment="Right"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1,0,0,0"
                CornerRadius="6,0,0,6">
            <ListBox x:Name="videoListBox"
                     ItemsSource="{Binding videoFiles, RelativeSource={RelativeSource AncestorType=Window}}"
                     SelectedIndex="{Binding currentIndex, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay}"
                     SelectionChanged="videoListBox_SelectionChanged" />
        </Border>
    </Grid>
</Window>