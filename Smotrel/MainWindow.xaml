<Window x:Class="Smotrel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:myCtrls="clr-namespace:Smotrel.Controls"
        mc:Ignorable="d"
        Title="Smotrilka Player" 
        Height="450" 
        Width="800"
        MinWidth="500"
        MinHeight="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        StateChanged="OnWindowStateChanged">

    <Window.Resources>
        <Style x:Key="SettingsBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="RootBorder" Background="{TemplateBinding Background}" CornerRadius="10 0 0 0"
                            BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RootBorder" Property="Background" Value="#44ffffff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="CapBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="RootBorder" Background="{TemplateBinding Background}">
                            <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RootBorder" Property="Background" Value="#44ffffff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ExitBtn" TargetType="Button" BasedOn="{StaticResource CapBtn}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="RootBorder" Background="{TemplateBinding Background}" CornerRadius="0 10 0 0">
                            <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RootBorder" Property="Background" Value="#E81123"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="EmptyStateStyle">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="Margin" Value="0 0 0 40"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Items.Count, ElementName=Data}" Value="0">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ScrollBarThumbStyle" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Rectangle Fill="#44ffffff" Margin="0 2 2 2" RadiusX="1" RadiusY="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Width" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Track Name="PART_Track" IsDirectionReversed="True" Margin="0 8 7 8">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumbStyle}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1e1e1e" BorderThickness="1" BorderBrush="#3A3A3A" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition x:Name="DamperGap" Height="0"/>
                <RowDefinition x:Name="GapDefinition" Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border x:Name="GapWindow" Grid.Row="1" Background="#2d2d2d" MouseLeftButtonDown="Header_Down" CornerRadius="9,9,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="settingsBtnDamper" Width="0"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition x:Name="ColumnOfWindowManagmentBtns" Width="120"/>
                        <ColumnDefinition x:Name="exitBtnDamper" Width="0"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="SettingsBtn" Width="40" Content="&#xE713;" FontFamily="Segoe MDL2 Assets" 
                            Foreground="#AAAAAA" Click="MenuButton_Click" FontSize="18" ToolTip="Настройки"
                            Style="{StaticResource SettingsBtn}"/>

                        <Button Width="40" Content="&#xED0E;" FontFamily="Segoe MDL2 Assets" 
                            Foreground="#AAAAAA" Click="AddMaterial_Click" FontSize="22" ToolTip="Добавить материал"
                            Style="{StaticResource CapBtn}"/>
                        
                    </StackPanel>

                    <TextBlock Grid.Column="2" Padding="5,0,0,0" Text="Smotrel - Offline Player" 
                               VerticalAlignment="Center" Margin="10,0,0,0" FontFamily="Rockwell"
                               Foreground="#AAAAAA" FontSize="18" FontWeight="SemiBold"/>

                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <Button Width="40" Content="&#xE921;" FontFamily="Segoe MDL2 Assets" Foreground="White" Click="MinimizeButton_Click" Style="{StaticResource CapBtn}"/>
                        <Button Width="40" Content="&#xE922;" FontFamily="Segoe MDL2 Assets" Foreground="White" Click="MaximizeRestoreButton_Click" Style="{StaticResource CapBtn}"/>
                        <Button x:Name="ExitBtn" Width="40" HorizontalAlignment="Center" Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets" Foreground="White" Click="CloseButton_Click" Style="{StaticResource ExitBtn}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="2">
                <ScrollViewer Padding="10" VerticalScrollBarVisibility="Auto"
                              myCtrls:CourseCard.CardClick="CourseCard_Click"
                              CanContentScroll="False" PanningMode="VerticalOnly"
                              PanningDeceleration="0.5" PanningRatio="0.5">
                    <ItemsControl x:Name="Data" AlternationCount="1000">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <myCtrls:CourseCard  x:Name="ItemBorder"  Margin="0,6,0,0" Label="{Binding Name}"/>
                                <DataTemplate.Triggers>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                        <Setter TargetName="ItemBorder" Property="Margin" Value="0,0,0,0"/>
                                    </Trigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <TextBlock x:Name="EmptyMessage" 
                           Text="Empty" 
                           Foreground="#2d2d2d" 
                           FontSize="72" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Style="{StaticResource EmptyStateStyle}"/>
            </Grid>
        </Grid>
    </Border>
</Window>