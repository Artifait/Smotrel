<Window x:Class="Smotrel.TestBenches.VolumeSliderAdvancedBench"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Smotrel.Controls"
        Title="VolumeSliderAdvanced Bench"
        Width="500" Height="200"
        Background="#1E1E1E"
        Foreground="White"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="🎚 VolumeSliderAdvanced Demo"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#FFCC00"
                   Margin="0,0,0,12"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,12">
            <controls:VolumeSliderAdvanced x:Name="VolumeAdvanced" Width="420" Height="32">
                <controls:VolumeSliderAdvanced.IconThresholds>
                    <controls:VolumeIconThreshold Threshold="0" IconText="🔇"/>
                    <controls:VolumeIconThreshold Threshold="0.3"
                        IconGeometry="M2,6 L6,6 L9,3 L9,13 L6,10 L2,10 Z"/>
                    <controls:VolumeIconThreshold Threshold="0.7"
                        IconGeometry="M2,6 L6,6 L9,3 L9,13 L6,10 L2,10 Z M11,5 C13,6.5 13,9.5 11,11"/>
                </controls:VolumeSliderAdvanced.IconThresholds>
            </controls:VolumeSliderAdvanced>

            <TextBlock x:Name="VolumeLabel"
                       FontSize="16"
                       TextAlignment="Center"
                       Foreground="White"
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
